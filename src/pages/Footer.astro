<style>
  .footer {
    background: var(--background-header);
    padding: 4rem 2rem 2rem;
    text-align: center;
    color: #2c3e50;
    min-height: 400px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .footer-content {
    max-width: 600px;
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 2.5rem;
  }

  .logo-container {
    margin-bottom: 1rem;
  }

  .logo {
    width: 120px;
    height: auto;
    filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
  }

  .contact-section {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
  }

  .contact-title {
    font-size: 3rem;
    font-weight: 900;
    letter-spacing: 0.1em;
    margin: 0;
    color: #2c3e50;
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
  }

  .email-link {
    font-size: 1.5rem;
    font-weight: 600;
    color: #2c3e50;
    text-decoration: none;
    transition: all 0.3s ease;
    padding: 0.5rem 1rem;
    border-radius: 8px;
  }

  .email-link:hover {
    background-color: rgba(44, 62, 80, 0.1);
    transform: translateY(-2px);
  }

  .social-media {
    display: flex;
    gap: 2rem;
    justify-content: center;
    align-items: center;
  }

  .social-link {
    color: #2c3e50;
    transition: all 0.3s ease;
    padding: 0.5rem;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .social-link:hover {
    color: #000;
    background-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-3px) scale(1.1);
  }

  .copyright {
    border-top: 2px solid rgba(44, 62, 80, 0.2);
    padding-top: 1.5rem;
    width: 100%;
  }

  .copyright p {
    margin: 0;
    font-size: 0.9rem;
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .footer {
      padding: 3rem 1rem 1.5rem;
    }
    
    .contact-title {
      font-size: 2.5rem;
    }
    
    .email-link {
      font-size: 1.2rem;
    }
    
    .social-media {
      gap: 1.5rem;
    }
    
    .logo {
      width: 100px;
    }
  }
</style>
