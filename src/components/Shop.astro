---
const products = [
  { id: 1, name: "Lorem Ipsum", price: "13€", image: "/placeholder-image.jpg" },
  { id: 2, name: "Lorem Ipsum", price: "13€", image: "/placeholder-image.jpg" },
  { id: 3, name: "Lorem Ipsum", price: "13€", image: "/placeholder-image.jpg" },
  { id: 4, name: "Lorem Ipsum", price: "13€", image: "/placeholder-image.jpg" },
  { id: 5, name: "Lorem Ipsum", price: "13€", image: "/placeholder-image.jpg" },
  { id: 6, name: "Lorem Ipsum", price: "13€", image: "/placeholder-image.jpg" },
  { id: 7, name: "Lorem Ipsum", price: "13€", image: "/placeholder-image.jpg" },
  { id: 8, name: "Lorem Ipsum", price: "13€", image: "/placeholder-image.jpg" },
];

const instagramDM = "https://www.instagram.com/direct/t/103285997737912";
---

<section class="shop-section">
  <h1 class="shop-title">BOTIGA</h1>
  
  <div class="products-grid">
    {products.map((product) => (
      <div class="product-card">
        <div class="product-image">
          <img src={product.image} alt={product.name} />
        </div>
        <div class="product-info">
          <h3 class="product-name">{product.name}</h3>
          <p class="product-price">{product.price}</p>
        </div>
      </div>
    ))}
  </div>
  
  <div class="buy-button-container">
    <a href={instagramDM} target="_blank" rel="noopener noreferrer" class="buy-button">
      COMPRAR
    </a>
  </div>
</section>

<style>
  .shop-section {
    background-color: var(--background-color);
    color: var(--text-color);
    padding: clamp(1.5rem, 4vw, 2rem);
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .shop-title {
    color: var(--title-color);
    font-size: clamp(2rem, 6vw, 3rem);
    font-weight: bold;
    margin-bottom: clamp(1.5rem, 3vw, 2rem);
    text-align: center;
  }

  .products-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(clamp(160px, 20vw, 200px), 1fr));
    gap: clamp(0.5rem, 2vw, 1rem);
    width: 100%;
    max-width: 800px;
    margin-bottom: clamp(1.5rem, 3vw, 2rem);
  }

  .product-card {
    background-color: #c4a4a4;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s ease;
    min-height: clamp(200px, 30vw, 250px);
  }

  .product-card:hover {
    transform: translateY(-5px);
  }

  .product-image {
    width: 100%;
    height: clamp(100px, 20vw, 150px);
    background-color: #b19494;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .product-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .product-info {
    padding: clamp(0.8rem, 2vw, 1rem);
    color: #000;
  }

  .product-name {
    font-weight: bold;
    font-size: clamp(0.9rem, 2.2vw, 1.1rem);
    margin: 0 0 clamp(0.3rem, 1vw, 0.5rem) 0;
  }

  .product-price {
    font-weight: bold;
    font-size: clamp(0.8rem, 2vw, 1rem);
    margin: 0;
  }

  .buy-button-container {
    margin-top: clamp(1rem, 2vw, 1rem);
  }

  .buy-button {
    background-color: var(--title-color);
    color: #000;
    padding: clamp(0.8rem, 2vw, 1rem) clamp(1.5rem, 3vw, 2rem);
    font-size: clamp(1rem, 2.5vw, 1.2rem);
    font-weight: bold;
    text-decoration: none;
    border-radius: 4px;
    transition: background-color 0.3s ease;
    display: inline-block;
  }

  .buy-button:hover {
    background-color: #2aac7a;
  }

  @media (max-width: 600px) {
    .products-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (max-width: 400px) {
    .products-grid {
      grid-template-columns: 1fr;
      max-width: 300px;
    }
    
    .product-card {
      min-height: 220px;
    }
  }
</style>
