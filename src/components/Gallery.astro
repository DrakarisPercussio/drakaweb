---
// Different images for each row - using proper Astro image imports
const topRowImages = [
  '/src/assets/LOGOS/logoblancinegredrakaris.png',
  '/src/assets/LOGOS/dks.png', 
  '/src/assets/gallery/foto-3.jpg',
  '/src/assets/gallery/foto-4.jpg',
  '/src/assets/gallery/foto-5.jpg',
  '/src/assets/gallery/foto-6.jpg'
];

const bottomRowImages = [
  '/src/assets/gallery/foto-7.jpg',
  '/src/assets/gallery/foto-8.jpg',
  '/src/assets/gallery/foto-9.jpg', 
  '/src/assets/gallery/foto-10.jpg',
  '/src/assets/gallery/foto-11.jpg',
  '/src/assets/gallery/foto-12.jpg'
];
---

<section class="gallery-section">
  <!-- Gallery title -->
  <div class="gallery-header">
    <h2>GALER√çA</h2>
  </div>
  
  <!-- Photo gallery -->
  <div class="photo-gallery">
    <!-- First row - moves left -->
    <div class="photo-row photo-row-left">
      <div class="photo-track">
        {[...topRowImages, ...topRowImages, ...topRowImages].map((image, index) => (
          <div class="photo-item">
            <img src={image} alt={`Foto ${index + 1}`} />
            <div class="photo-placeholder">FOTOS</div>
          </div>
        ))}
      </div>
    </div>
    
    <!-- Second row - moves right -->
    <div class="photo-row photo-row-right">
      <div class="photo-track">
        {[...bottomRowImages, ...bottomRowImages, ...bottomRowImages].map((image, index) => (
          <div class="photo-item">
            <img src={image} alt={`Foto ${index + 1}`} />
            <div class="photo-placeholder">FOTOS</div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .gallery-section {
    position: relative;
    background-color: var(--white-background);
    padding: clamp(60px, 10vw, 80px) 0;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
  }

  .gallery-section::before {
    content: '';
    position: absolute;
    top: clamp(-80px, -15vw, -120px);
    left: 0;
    width: 100%;
    height: clamp(80px, 15vw, 120px);
    background: var(--background-color);
    transform: skewY(2deg);
    transform-origin: top left;
    z-index: 1;
  }

  .gallery-section::after {
    content: '';
    position: absolute;
    bottom: clamp(-80px, -15vw, -120px);
    left: 0;
    width: 100%;
    height: clamp(80px, 15vw, 120px);
    background: var(--background-color);
    transform: skewY(-2deg);
    transform-origin: bottom left;
    z-index: 1;
  }
  
  .gallery-header {
    text-align: center;
    padding: clamp(2rem, 6vw, 4rem) 0 clamp(1rem, 3vw, 2rem) 0;
    position: relative;
    z-index: 2;
  }
  
  .gallery-header h2 {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: bold;
    color: var(--title-color);
    letter-spacing: 2px;
    margin: 0;
  }
  
  .photo-gallery {
    padding: clamp(1rem, 3vw, 2rem) 0;
    position: relative;
    z-index: 2;
    width: 100%;
  }
  
  .photo-row {
    overflow: hidden;
    white-space: nowrap;
    margin-bottom: clamp(1rem, 3vw, 2rem);
  }
  
  .photo-track {
    display: inline-flex;
    animation-duration: clamp(40s, 60s, 80s);
    animation-timing-function: linear;
    animation-iteration-count: infinite;
    will-change: transform;
  }
  
  .photo-row-left .photo-track {
    animation-name: scrollLeftSmooth;
  }
  
  .photo-row-right .photo-track {
    animation-name: scrollRightSmooth;
  }
  
  .photo-item {
    position: relative;
    width: clamp(200px, 25vw, 300px);
    height: clamp(133px, 17vw, 200px);
    margin-right: clamp(10px, 2.5vw, 20px);
    flex-shrink: 0;
    overflow: hidden;
    background: #a08a8a;
    border-radius: 8px;
  }
  
  .photo-item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }
  
  .photo-placeholder {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: clamp(1rem, 2.5vw, 1.5rem);
    font-weight: bold;
    color: #333;
    text-shadow: 2px 2px 4px rgba(255,255,255,0.8);
    pointer-events: none;
  }
  
  @keyframes scrollLeftSmooth {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(calc(-100% / 3));
    }
  }
  
  @keyframes scrollRightSmooth {
    from {
      transform: translateX(calc(-100% / 3));
    }
    to {
      transform: translateX(0);
    }
  }
  
  @media (max-width: 768px) {
    .photo-track {
      animation-duration: 45s;
    }
  }
  
  @media (max-width: 480px) {
    .photo-track {
      animation-duration: 35s;
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .photo-track {
      animation: none;
    }
  }
</style>
