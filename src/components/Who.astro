<style>
.who-section {
    min-height: 100vh;
    color: var(--text-color);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: clamp(1rem, 4vw, 2rem);
}

.who-container {
    margin-top: clamp(100px, 20vh, 200px);
    max-width: 1200px;
    width: 100%;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(2rem, 6vw, 4rem);
    align-items: center;
}

.who-image img {
    width: 100%;
    height: auto;
    max-width: min(400px, 80vw);
}

.who-content h1 {
    font-size: clamp(2rem, 5vw, 3rem);
    font-weight: bold;
    color: #00d4aa;
    margin-bottom: clamp(1rem, 3vw, 2rem);
    letter-spacing: 2px;
}

.who-content p {
    font-size: clamp(1rem, 2.5vw, 1.1rem);
    line-height: 1.6;
    margin: 0;
}

@media (max-width: 900px) {
    .who-container {
        gap: 3rem;
        margin-top: 150px;
    }
}

@media (max-width: 768px) {
    .who-container {
        grid-template-columns: 1fr;
        gap: 2rem;
        text-align: center;
        margin-top: 100px;
    }
}

@media (max-width: 480px) {
    .who-section {
        padding: 1rem;
    }
    
    .who-container {
        margin-top: 80px;
    }
}
</style>
