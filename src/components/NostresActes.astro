<style>
  .nostres-actes {
    background-color: var(--background-color);
    color: white;
    padding: clamp(60px, 10vw, 80px) 0;
    min-height: 100vh;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 4vw, 2rem);
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: bold;
    text-align: center;
    margin-bottom: clamp(60px, 12vw, 80px);
    color: var(--title-color);
    letter-spacing: 2px;
  }

  .event-row {
    display: flex;
    align-items: center;
    gap: clamp(30px, 8vw, 60px);
    margin-bottom: clamp(100px, 20vw, 200px);
  }

  .event-row.reverse {
    flex-direction: row-reverse;
  }

  .event-content {
    flex: 1;
    max-width: 700px;
  }

  .event-title {
    font-size: clamp(1.4rem, 3.5vw, 1.8rem);
    font-weight: bold;
    color: var(--title-color);
    margin-bottom: clamp(15px, 3vw, 20px);
    letter-spacing: 1px;
  }

  .event-description {
    font-size: clamp(0.9rem, 2.2vw, 1rem);
    line-height: 1.6;
    color: #ccc;
  }

  .photo-carousel {
    flex: 1;
    max-width: min(400px, 90vw);
    position: relative;
  }

  .carousel-container {
    width: 100%;
    height: clamp(200px, 35vw, 300px);
    overflow: hidden;
    border-radius: 8px;
    background-color: #a67c7c;
    position: relative;
  }

  .carousel-track {
    display: flex;
    height: 100%;
    transition: transform 0.5s ease;
  }

  .photo-placeholder {
    min-width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: clamp(1.5rem, 4vw, 2rem);
    font-weight: bold;
    color: #333;
  }

  @media (max-width: 900px) {
    .event-row {
      gap: 25px;
      margin-bottom: 80px;
    }
  }

  @media (max-width: 768px) {
    .event-row,
    .event-row.reverse {
      flex-direction: column;
      gap: 30px;
      text-align: center;
      margin-bottom: 60px;
    }

    .photo-carousel {
      max-width: 100%;
    }
  }

  @media (max-width: 480px) {
    .carousel-container {
      height: 180px;
    }
    
    .event-row {
      margin-bottom: 50px;
    }
  }
</style>

<script>
  import { initializeCarousels } from './utils/InfiniteCarousel.js';

  document.addEventListener('DOMContentLoaded', function() {
    initializeCarousels();
  });
</script>
