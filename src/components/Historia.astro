<style>
  .historia-section {
    position: relative;
    background-color: var(--white-background);
    padding: clamp(60px, 12vw, 80px) 0;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 80vh;
  }

  .diagonal {
    position: absolute;
    width: 100%;
    height: clamp(80px, 15vw, 120px);
    background-color: var(--background-color);
    left: 0;
    z-index: 1;
  }

  .diagonal-top {
    top: 0;
    transform: skewY(-3deg);
    transform-origin: top left;
  }

  .diagonal-bottom {
    bottom: 0;
    transform: skewY(3deg);
    transform-origin: bottom left;
  }

  .historia-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 clamp(1rem, 4vw, 2rem);
    position: relative;
    z-index: 2;
  }

  .historia-title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    font-weight: bold;
    text-align: center;
    color: var(--background-header);
    margin-bottom: clamp(40px, 8vw, 60px);
    letter-spacing: 2px;
  }

  .historia-content {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(30px, 8vw, 60px);
    align-items: center;
  }

  .historia-text {
    padding-right: clamp(0px, 3vw, 20px);
  }

  .historia-text p {
    font-size: clamp(0.9rem, 2.2vw, 1rem);
    line-height: 1.6;
    color: #333;
    text-align: justify;
    margin: 0;
  }

  .fotos-container {
    display: flex;
    justify-content: center;
  }

  .fotos-box {
    background-color: #A08B7A;
    padding: clamp(20px, 5vw, 40px) clamp(15px, 4vw, 30px);
    border-radius: 8px;
    width: 100%;
    max-width: min(300px, 90vw);
    text-align: center;
  }

  .carousel-container {
    width: 100%;
    height: clamp(150px, 25vw, 200px);
    overflow: hidden;
    border-radius: 4px;
    background-color: #8B7A6B;
    position: relative;
  }

  .carousel-track {
    display: flex;
    height: 100%;
    transition: transform 0.5s ease;
  }

  .photo-placeholder {
    min-width: 100%;
    height: 100%;
    background-color: #6B5B4A;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: clamp(1rem, 3vw, 1.5rem);
    font-weight: bold;
    color: white;
  }

  @media (max-width: 900px) {
    .historia-content {
      gap: 40px;
    }
  }

  @media (max-width: 768px) {
    .historia-content {
      grid-template-columns: 1fr;
      gap: 30px;
    }
    
    .historia-text {
      padding-right: 0;
    }
  }

  @media (max-width: 480px) {
    .historia-section {
      padding: 40px 0;
    }
  }
</style>

<script>
  import { initializeCarousels } from './utils/InfiniteCarousel.js';

  document.addEventListener('DOMContentLoaded', function() {
    initializeCarousels();
  });
</script>
